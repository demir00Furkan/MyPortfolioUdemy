@model Portfolio
@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/Layout/Index.cshtml";
}

div class="content">
<div class="container-fluid">
	<h4 class="page-title">Portfolyo</h4>
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
					<div class="card-title"> Portfolyo Güncelleme Sayfası</div>
				</div>
				<div class="card-body">
					<form method="post">
						<input type="hidden" asp-for="PortfolioId" />
						<label>Proje</label>
						<input type="text" asp-for="Title" class="form-control" />
						<br />
						<label>Detay</label>
						<input type="text" asp-for="SubTitle" class="form-control" />
						<br />
						<label>Açıklama</label>
						<input type="text" asp-for="Description" class="form-control" />
						<br />
						<br />
						<label>ImgUrl</label>
						<input type="text" asp-for="ImgUrl" class="form-control" />
						<br />
						<label>Url</label>
						<input type="text" asp-for="Url" class="form-control" />
						<button class="btn btn--primary"> Değişiklikleri Kaydet</button>
					</form>

				</div>
			</div>
		</div>
	</div>
</div>
</div>


