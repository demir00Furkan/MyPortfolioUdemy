@model List<Skill>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Layout/Index.cshtml";
	int count = 0;
}




<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yetenekler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yetenekler Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Yetenekler İle İlgili İşlemleri Aşağıdaki Panalden Yapabilirsiniz:
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Teknik Beceriler</th>
									<th scope="col">Beceri Seviyesi (%)</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.Value</td>
										<td><a href="/Skills/DeleteSkills/@item.SkillId" class="btn btn-danger">Sil</a></td>
										<td><a href="/Skills/UpdateSkills/@item.SkillId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Skills/CreateSkills/" class="btn btn-primary">Yeni Yetenek Ekle </a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>







